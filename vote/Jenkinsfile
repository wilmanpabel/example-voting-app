pipeline {
    agent {
        docker {
            image 'python:3.6'
        }
    }

    stages {
        stage('build') {
            when {
                changeset "**/vote/**"
            }
            steps {
                echo "compiling"
                dir('vote'){
                    sh 'ls'
                }
            }
        }
    }
    post {
        always {
            echo "is completed"
        }
        failure {
            echo "fail"
        }
        success {
            echo "ok"
        }
    }

}
