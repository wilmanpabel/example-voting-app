pipeline {
    agent any
    stages {
        //stage('build') {
        //    when {
        //        changeset "**/vote/**"
        //    }
        //    agent {
        //        docker {
        //            image 'python:2.7.16-slim'
        //            args ' --user root -v ./local'
        //        }
        //    }
        //    steps {
        //        echo "installing requirements"
        //        dir('vote'){
        //            sh 'pip install -r requirements.txt'
        //        }
        //    }
        //}
        stage('test') {
            when {
                changeset "**/vote/**"
            }
            agent {
                docker {
                    image 'python:2.7.16-slim'
                    args ' --user root'
                }
            }
            steps {
                echo "run test ok"
                dir('vote'){
                    sh 'pip install -r requirements.txt'
                    sh 'nosetests -v'
                }
            }
        }
        stage('package-image'){
            when {
                changeset "**/vote/**"
                branch "master"
            }
            //agent any
            steps {
                echo "preate to package stage"
                script {
                    docker.withRegistry('https://index.docker.io/v1','dcoker-hub-credentials'){
                        def myimage = docker.build("wilmanpabel/docker-vote-app-test:v${env.BUILD_ID}","./vote")
                        myimage.push()
                        //image.push("${env.BRANCH_NAME}")
                    }
                }
            }
        }
    }
    post {
        always {
            echo "is completed"
        }
        failure {
            echo "fail"
        }
        success {
            echo "ok"
        }
    }

}
